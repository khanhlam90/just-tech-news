<!-- refer to post-info.handlebars -->
{{> post-info post}}

<!-- to include the form and comments-->
<!-- update the hanlebars if helper to make sure only logged-in user can see the form -->
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

<!-- refer to comments.handlebars -->
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}